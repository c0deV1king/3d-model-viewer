<div>
  <button
    id="wireframeToggle"
    class="absolute z-1 w-12 h-12 bg-[#f2f2f2] top-4 right-4 hover:opacity-[70%] duration-300 ease-in-out rounded-md cursor-pointer"
    onclick="console.log('Filter button clicked')"
    ><img src="/box.svg" class="w-full h-full p-2" /></button
  >
</div>

<script>
  // button to toggle wireframe mode
  const wireframeToggle = document.getElementById('wireframeToggle');
  if (wireframeToggle) {
    wireframeToggle.addEventListener('click', () => {
      const event = new CustomEvent('toggleWireframe');
      document.dispatchEvent(event);
    });
  }
</script>
